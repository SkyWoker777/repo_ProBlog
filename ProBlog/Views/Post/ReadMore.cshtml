@model ProBlog.Core.Etities.Post
@{
    ViewBag.Title = $"Blog - {Model.Title}";
}

<div class="post">
    <div class="post-meta">
        <div class="row">
            <header>
                <div class="page-header">
                    <h1>@Model.Title</h1>
                </div>
            </header>
        </div>
        <div class="row">
            <div class="post-category">
                Category: <span class="label label-primary">@Model.Category.Name</span>
            </div>
            <div class="post-tags">
                Tags: <span class="label label-info"></span>
            </div>
            <div class="posted-date">
                @Model.PostedOn.ToShortDateString()
            </div>
        </div>
    </div>
    <div class="post-body">
        <img class="img-responsive" alt="post image" src="@Url.Action("GetImage", "Post", new { Model.Id })" />
        <div class="text-justify">
            @Html.Raw(Model.Content)
        </div>
    </div>
    <div class="post-foot">
        @Html.ActionLink("BACK To Posts", "List", "Post")
    </div>
</div>

