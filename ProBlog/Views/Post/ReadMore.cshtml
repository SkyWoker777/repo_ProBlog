@model ProBlog.Core.Etities.Post
@{
    ViewBag.Title = $"Blog - {Model.Title}";
}

<div class="post">
    <div class="post-meta">
        <div class="row">
            <header>
                <div class="page-header">
                    <h1>@Model.Title</h1>
                </div>
            </header>
        </div>
        <div class="row">
            <div class="post-category">
               Категория: <span class="label label-success">@Model.Category.Name</span>
            </div>
            <div class="post-tags">
                Tags: <span class="label label-info"></span>
            </div>
            <div class="posted-date">
                @Model.PostedOn.ToShortDateString()
            </div>
        </div>
    </div>
    <div class="post-body">
        <img class="img-responsive" src="@Url.Action("GetImage", "Post", new { Model.Id })" alt="post image" itemprop="image" />
        <div class="text-justify">
            @Html.Raw(Model.Content)
        </div>
    </div>
    <div class="post-foot">
        <input type="button" onclick="history.back();" value="&larr; Вернуться" class="btn btn-default" />
    </div>
</div>

