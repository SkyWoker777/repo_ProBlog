@model ProBlog.Models.BlogViewModel
@using ProBlog.Helpers
@{
    ViewBag.Title = "Blog";
}

<header>
    @Html.Partial("_Categories", Model.Categories)
    <div class="page-header">
        <h1>Posts <span>@ViewBag.CategoryName</span></h1>
    </div>
</header>
@if (Model.Posts.Count() > 0)
{
    foreach (var post in Model.Posts)
    {
        @Html.Partial("_PostTemplate", post)
    }
}
else
{
    <div class="notfound">
        <p>Posts not found!</p>
    </div>
}
<div class="pagination box-paging">
    @Html.PageLinks(Model.PageInfo, x => Url.Action("ListByCategory", new { page = x }))
</div>

