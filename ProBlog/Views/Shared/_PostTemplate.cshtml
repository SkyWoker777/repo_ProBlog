@model ProBlog.Core.Etities.Post

<div class="post">
    <div class="post-meta">
        <div class="row">
            <!--Title-->
            <div class="post-title">
                @*<h2>@Html.PostLink(Model)</h2>*@
                <h2>@Model.Title</h2>
            </div>
        </div>

        <div class="row">
            <!--Category-->
            <div class="post-category">
                @*<span>Category: </span>@Html.CategoryLink(Model.Category)*@
                <span>Category: </span>@Model.Category.Name
            </div>

            <!--Tags-->
            <div class="post-tags">
                @*<span>Tags:</span>@Helpers.Tags(Html, Model.Tags)*@
                <span>Tags: </span>
            </div>

            <!--Posted date-->
            <div class="posted-date">
                @Model.PostedOn.ToShortDateString()
            </div>

        </div>
    </div>

    <!--post-preview-->
    <div class="post-body">
        <img class="img-responsive" alt="post image" src="@Url.Action("GetImage", "Post", new { Model.Id })" />
        <div class="text-justify">
            @Html.Raw(Model.Preview)
        </div>
    </div>

    <!--post-footer-->
    <div class="post-foot">
        @Html.ActionLink("Read...", "ReadMore", "Post", new {
       year = Model.PostedOn.Year,
       month = Model.PostedOn.Month,
       day = Model.PostedOn.Day
   }, new { title = "Read more...",})
    </div>
</div>

