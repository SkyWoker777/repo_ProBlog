@model IEnumerable<ProBlog.Core.Etities.Category>

<div id="nav-icon" title="Categories">
    <span></span>
    <span></span>
    <span></span>
    <span></span>
</div>
<div id="menu-categories">
    @if (Model.Count() > 0)
    {
    <ul>
        @foreach (var item in Model)
        {
            <li>
                @Html.ActionLink(item.Name, "ListByCategory",
                new RouteValueDictionary(new { categoryId = item.Id, categoryName = item.Name, page = 1 }))
            </li>
        }
    </ul>
    }
    else { <p>Пусто</p>}
</div> 